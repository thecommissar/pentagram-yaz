process Xavier::closeDoor()
{
	[[PT_ACTIVITY, referent]];

	sped : Item;
	door : Door;

	foreach	sped where (type = TypeDoorNS) within 10 cells of Xavier
	{
		door.referent = sped.referent;
		break;
	}

	if door 
	{
		bark("These need not be open!
		\f Ceux-ci ne doivent point estre ouverts!
		\g Die Tren hier brauchen ja wohl nicht offenzustehen!");
		realDoAnim(AS_ENTER_CAST,getDir());
		playSFX(WIND3,200);
		realDoAnim(AS_CAST1,getDir());
		door.doorDriver(Xavier:Referent);
		realDoAnim(AS_EXIT_CAST,getDir());
	}
}


