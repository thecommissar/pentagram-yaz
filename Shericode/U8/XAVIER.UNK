
uses "npc";
uses "flags";
uses "free";
uses "door";
uses "snddefs";

npcclass Xavier inherits Npc
{
	process use();
	process look();
	process schedule(currentTime:Long);
	process enterFastArea();
	process leaveFastArea();
	process cast(ref:Referent);
	process AvatarStoleSomething(ref:Referent);

	process atMonastery(); 
	process atHome(); 
	process randomBarkAtHome(); 
	process randomBarkAtMonastery(); 
	process inWoods(); 
	process randomBarkInWoods(); 

	process closeDoor(); 
}



process Xavier::look()
{

	if isDead()
	{
		bark("the body of Xavier \f le corps de Xavier
			\g Xaviers Leiche");
		return;
	}

	if xavierName and xavierJob 
	{
		bark("Xavier the monk \f Xavier le moine
			\g Der M”nch Xavier");
		return;
	}

	else if xavierName 
	{
		bark("Xavier");
		return;
	}

	else if xavierJob 
	{
		bark("monk \f moine \g M”nch");
		return;
	}

	else 
	{
		bark("man \f homme \g Mann");
		return;
	}
}




process Xavier::schedule(currentTime:Long)
{

	point : WorldPoint;
	map : MapNum = MapArgentrockIsle;
	sched : Number;

	if Xavier.isDead()
	{
		return;
	}

	// If time to go to work, head for the Monastery
	if (getPeriod() = daytide) 
	{
		point.x = 18559;
		point.y = 19167;
		point.z = 56;
		sched = at_monastery;
	}

	// if it's nap time, head for home.
	if (getPeriod() >= threemoons)
	{
		point.x = 20703;
		point.y = 16927;
		point.z = 56;
		sched = at_home;
	}

	// Head for the woods
	if (getPeriod() = bloodwatch) or (getPeriod() = firstebb)
	{
		point.x = 22495;
		point.y = 18143;
		point.z = 56;
		sched = in_woods;
	}

	if canSafeTeleport(point,map)
	{
		xavierSchedule = sched;
		safeTeleport(point,map);
	} 
}




process Xavier::enterFastArea()
{

	resetRef(referent,PT_PATHFIND);
	resetRef(referent,PT_ACTIVITY);
	resetRef(referent,PT_ANIM);
	resetRef(referent,PT_BARK);
	
	if (xavierSchedule = at_home) 
	{
		spawn atHome() -> return;
	}
	
	else if (xavierSchedule = at_monastery) 
	{
		spawn atMonastery() -> return;
	}

	else if (xavierSchedule = in_woods) 
	{
		spawn inWoods() -> return;
	}
}




process Xavier::leaveFastArea()
{
	xavierJustHealed = false;

	killProcess(Xavier:Referent,PT_ACTIVITY);
	killProcess(Xavier:Referent,PT_PATHFIND);
	killProcess(Xavier:Referent,PT_ANIM);
	killProcess(Xavier:Referent,PT_BARK);

	if Xavier.isDead()
	{
		teleport(urandom(10000),urandom(10000),0,0);
		return;
	}

}




process Xavier::cast(ref:Referent)
{

	count:Number;
	count = 10;

	// TEST TO MAKE SURE THAT THE NPC HAS A TARGET
	// -------------------------------------------
	while (not getTarget()) and (count) {
		wait(1);
		count--;
	}

	ref = getTarget();


	if ref = Avatar:Referent
	{
		
		killProcess(Xavier:Referent,PT_ACTIVITY);
		killProcess(Xavier:Referent,PT_PATHFIND);
		killProcess(Xavier:Referent,PT_ANIM);
		killProcess(Xavier:Referent,PT_BARK);

		bark("I must flee!
					\f Il faut que je disparaisse!
					\g Ich muá gehen!");

		spawn safePlaySFX(MAGIC3,200) -> return;
		realDoAnim(AS_ENTER_CAST,getDir());
		realDoAnim(AS_CAST1,getDir());
		toggleStatus(INVISIBLE);
		setFrame(getFrame());
		spawn safePlaySFX( WIND4,100) -> return;
		realDoAnim(AS_EXIT_CAST,getDir());
		clrImmortal();
		setDead();
		teleport(urandom(10000),urandom(10000),0,0);
	}
}




process Xavier::AvatarStoleSomething(ref:Referent)
{
	item,stolenItem:Item;
	item.referent = ref;

	if xavierSchedule != at_home
	{
		return;
	}

	resetRef(referent,PT_ACTIVITY);
	resetRef(referent,PT_PATHFIND);
	resetRef(referent,PT_BARK);
	resetRef(referent,PT_ANIM);

	foreach recursive stolenItem within container Avatar 
	{
		if stolenItem.referent = item.referent
		{
			cSetActivity(ACT_COMBAT);
		}
	}

	turnToFace(getDirToItem(Avatar:Referent),false,10);
	bark("What are you doing there...?
		\f Eh! Qu'est-ce que tu trafiques, l…-bas...?
		\g Was macht Ihr denn da...?");
	wait(120);
	enterFastArea();
	return;
}



process Xavier::atMonastery()
{

	[[PT_ACTIVITY, referent]];

	startup 
	{
		pathEgg:Item;
		counter,counter2:Number;
		foreach	pathEgg where (type = TypePathMarker) and (quality = 4) within 10 cells of Xavier
		{
			counter2 = pathEgg.getFrame();
		}
	}

	process
	{
		for counter = counter2 to 31 
		{
			foreach	pathEgg where (type = TypePathMarker) and (frame = (31 - counter))
				and (quality = 4) within 50 cells of Xavier 
			{
				if pathfind(pathEgg.referent,10)
				{
					randomBarkAtMonastery();
				}
				else
				{
					wait(500);
				}
			}
		}
	counter2 = 0;
	}
}



