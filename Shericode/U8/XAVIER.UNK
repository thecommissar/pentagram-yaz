process Xavier::atHome()
{

	[[PT_ACTIVITY, referent]];

	startup 
	{
		pathEgg:Item;
		counter, counter2 :Number;

		if getLastAnimSet() = AS_SIT_DOWN
		{
			realDoAnim(AS_SIT_UP,getDir());
		}
		foreach	pathEgg where (type = TypePathMarker) and (quality = 5) within 10 cells of Xavier
		{
			counter2 = pathEgg.getFrame();
		}
	}

	process
	{
		for counter = counter2 to 12 {
			foreach	pathEgg where (type = TypePathMarker) and (frame = counter)
			 	and (quality = 5) within 25 cells of Xavier {
				 
				if pathfind(pathEgg.referent,7)
				{
					if counter = 0
					{
						turnToFace(2,0,10);
						bark("I must meditate now.
						\f Je dois m‚diter, maintenant.
						\g Ich muá jetzt meditieren.");
						realDoAnim(AS_SIT_DOWN,getDir());
						wait(1200);
						realDoAnim(AS_SIT_UP,getDir());
					}
					else if counter = 5
					{
						turnToFace(4,0,15);
						closeDoor();
					}
					else
					{
						realDoAnim(AS_STAND,getDir());
						randomBarkAtHome();
					}
				}
				else
				{
					wait(500);
				}
			wait(60 + urandom(100));
			}
		}
	counter2 = 0;
	}
}



