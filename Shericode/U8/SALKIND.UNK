	{
		if isDead()
		{
			bark("corpse \f cadavre \g Leiche");
		}
		else
		{
			bark("man \f homme \g Mann");
		}
	}
}



process Salkind::schedule(currentTime:Long) { 
}


process Salkind::enterFastArea()
{

	if (toranDead = false) or (isDead() = true) or (secondexecution = true)
	{
		return;
	}

	resetRef(referent,PT_ACTIVITY);
	resetRef(referent,PT_PATHFIND);
	resetRef(referent,PT_ANIM);
	resetRef(referent,PT_BARK);

	if (SalkindSchedule = at_court) 
	{
		spawn atCourt() -> return;
	}

	else if (SalkindSchedule = at_home) 
	{
		spawn atHome() -> return;
	}
}




process Salkind::leaveFastArea() 
{
	resetRef(referent,PT_ACTIVITY);
	resetRef(referent,PT_PATHFIND);
	resetRef(referent,PT_ANIM);
	resetRef(referent,PT_BARK);
}





process Salkind::AvatarStoleSomething(ref:Referent)
{

	if (SalkindSchedule != at_home) or (isDead() = true)
	{
		return;
	} 

	item:Item;
	item.referent = ref;
	resetRef(referent,PT_ACTIVITY);
	resetRef(referent,PT_PATHFIND);
	resetRef(referent,PT_ANIM);
	resetRef(referent,PT_BARK);
	salkindPissed = true;


	turnToFace(getDirToItem(Avatar:Referent),false,10);
	bark("What do you think you are doing?
		\f Non, mais qu'est-ce que tu fais!?
		\g Was macht Ihr da eigentlich?");
	enterFastArea();
	return;
}





process Salkind::cast(ref:Referent)
{
	count:Number;
	count = 10;

	// TEST TO MAKE SURE THAT THE NPC HAS A TARGET
	// -------------------------------------------
	while (not getTarget()) and (count) {
		wait(1);
		count--;
	}

	ref = getTarget();



	if ref = Avatar:Referent
	{

		realDoAnim(AS_DRAW_WEAPON,getDir());
		spawn callTheGuards(NULL_REF) -> return;

		if not isDead()
		{

			if (urandom(100) > 50)
			{

				bark("Don't hurt me!
							\f Oh, non piti‚! Ne me fais point mal!
							\g Oh, bitte! Tut mir nichts! Ich flehe Euch an!");
			}
			else
			{
				bark("Please! I'll do anything...
							\f Piti‚! Je feroi tout ce que tu voudras...
							\g Ich bitte Euch! Ich will auch alles tun...");
			}
		}
	}
}




process Salkind::atHome()
{

	[[PT_ACTIVITY, referent]];

	startup 
	{
		pathEgg : Item;
		counter,counter2:Number;
		foreach	pathEgg where (type = TypePathMarker) within 10 cells of Salkind
		{
			counter2 = pathEgg.getFrame();
		}
	}

	process
	{
		for counter = counter2 to 10
		{
			foreach	pathEgg where (type = TypePathMarker) and (frame = counter) within 30 cells of Salkind
			{
				if pathfind(pathEgg.referent,12)
				{
					if (counter = 5)
					{
						turnToFace(4,0,15);
						closeDoor();
						wait(100);
					}
					else
					{
						if not somebodyTalking
						{
							randomBarkAtHome();
						}
						wait(100);

					}
				}
				else
				{
					wait(700);
				}
			}

		wait(200);
		counter2 = 0;

		}
	}
}


process Salkind::atCourt() 
{

	[[PT_ACTIVITY, referent]];

	startup 
	{
		ran,dir:Number;
		wait(300);
	}


	process
	{
		ran = urandom(10);
		turnToFace(getDirToItem(Mordea:Referent),false,15);
		dir=getDir();

		if ran <= 3
		{
			turnToFace(getDirToItem(Avatar:Referent),false,15);
			realDoAnim(AS_FIDGET,dir);
			turnToFace(getDirToItem(Mordea:Referent),false,20);
		}
		else if (ran >= 4) and (ran <= 8)
		{
			realDoAnim(AS_FIDGET,dir);
		}
		else
		{
			realDoAnim(AS_DRAW_WEAPON,dir);
			realDoAnim(AS_SHEATH_WEAPON,dir);
		}
		wait(200 + urandom(100));
		}
	}



