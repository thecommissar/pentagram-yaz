process Salkind::closeDoor()
{
	[[PT_ACTIVITY, referent]];

	sped : Item;
	door : Door;

	foreach	sped where (type = TypeDoorNS) within 10 cells of Salkind
	{
		door.referent = sped.referent;
		break;
	}

	if door
	{
		turnToFace(getDirToItem(door.referent),false,10);
		bark("Who keeps opening these?
			\f Qui est-ce qui a encore ouvert ces portes?
			\g Wer ”ffnet denn st„ndig diese Tren hier?");
		door.doorDriver(Salkind:Referent);
	}
}



