			bark("Salkind the late Seneschal
				\f Salkind, le S‚n‚chal d‚c‚d‚
				\g Salkind, der verstorbene Majordomus");
		}
		else
		{
			bark("Salkind the Seneschal
				\f Salkind, le S‚n‚chal
				\g Der Majordomus Salkind");
		}
	}
	else if salkindName
	 {
		if isDead()
		{
			bark("the very late Salkind
				\f Salkind, le d‚c‚d‚
				\g Der l„ngst verstorbene Salkind");
		}
		else
		{
			bark("Salkind");
		}
	}
	else if salkindJob
	{
		if isDead()
		{
			bark("dead Seneschal \f S‚n‚chal mort \g Der tote Majordomus");
		}
		else
		{
			bark("Seneschal \f S‚n‚chal \g Majordomus");
		}
	}
