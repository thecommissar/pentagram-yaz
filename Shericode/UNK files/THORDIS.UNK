process Thordis::schedule(currentTime:Long)
{
	if Thordis.isDead()
	{
		return;
	}

	if inShadeScene = true
	{
		return;
	}

	if plantScene = true
	{
		return;
	}

	point : WorldPoint;
	map : MapNum = MapLostVale;
	sched : Number;

	if (getPeriod()=daytide)  // IN THE FIELDS
	{
		point.x = 12904;
		point.y = 13976;
		point.z = 64;
		sched = in_field;
	}
	else // AT HOME
	{
		point.x = 11052;
		point.y = 12724;
		point.z = 64;
		sched = at_home;
	}

	if canSafeTeleport(point, MapLostVale)
	{
		thordisSchedule = sched;
		safeTeleport(point, MapLostVale);
	}

}


process Thordis::enterFastArea()
{
	if Thordis.isDead()
	{
		return;
	}

	if inShadeScene = true
	{
		killProcess(referent, PT_ACTIVITY);
		return;
	}

	resetRef(referent, PT_BARK);

	if (thordisSchedule = at_home)
	{
		cSetActivity(ACT_LOITER);
		spawn randomBarkAtHome() -> return;
	}
	else if (thordisSchedule = in_field)
	{
		cSetActivity(ACT_LOITER);
		spawn randomBarkInField() -> return;
	}
}


process Thordis::leaveFastArea()
{
	killProcess(referent, PT_ACTIVITY);
	resetRef(referent, PT_PATHFIND);
	resetRef(referent, PT_ANIM);
	resetRef(referent, PT_BARK);

	if isDead()
	{
		teleport(urandom(10000), urandom(10000), 0, 0);
	}
}


process Thordis::cast(ref:Referent) // this is for calling the shades
{
	count : Number;
	count = 10;

	while (not getTarget()) and (count)
	{
		wait(1);
		count--;
	}

	ref = getTarget();

	if ref = Avatar:Referent
	{
		spawn callTheShades() -> return;

		if not isDead()
		{
			killProcess(referent, PT_ACTIVITY);
			killProcess(referent, PT_BARK);
			bark("Help! Help! Shades, me, protect!");
		}
	}
}


process Thordis::randomBarkAtHome()
{
	[[PT_ACTIVITY, referent]];

	avaP,torP : WorldPoint;
	ran : Number;

	avaP.x = Avatar.getX();
	avaP.y = Avatar.getY();
	avaP.z = Avatar.getZ();
	torP.x = Thordis.getX();
	torP.y = Thordis.getY();
	torP.z = Thordis.getZ();

	ran = getDistance(avaP, torP);

	if (ran < 200)
	{
		ran = urandom(8);

		if ran = 1
		{
			turnToFace(getDirToItem(Avatar:Referent), false, 10);
			bark("Hello?");
			realDoAnim(AS_FIDGET, getDir());
			wait(120);
		}

		if ran = 2
		{
			turnToFace(getDirToItem(Avatar:Referent), false, 10);
			bark("Need what, do you?");
			realDoAnim(AS_FIDGET, getDir());
			wait(120);
		}

		if ran = 3
		{
			bark("Resting, I am. Away, go.");
			wait(60);
		}

		if ran = 4
		{
			bark("Speak to anyone, wish, I do not!");
			wait(120);
		}
	}
	else
	{
		ran = urandom(12);
		turnToFace(urandom(7),0,10);

		if ran = 1
		{
			bark("Curse Ingyald, the Ancient Ones should!");
			wait(60);
		}

		if ran = 2
		{
			bark("With Tyorvi, do what, can I?");
			realDoAnim(AS_FIDGET,getDir());
			wait(60);
		}

		if ran = 3
		{
			bark("Lonely, I am... The last Elder, shall I be.");
		}

		if ran = 4
		{
			bark("Why Ancient Ones, forsaken us, have you?");
			wait(60);
		}

		if ran = 5
		{
			bark("Do something for my poeple, I must!");
		}

		if ran = 6
		{
			bark("No comfort, the shades offer. No answer, they have.");
		}

		if ran = 7
		{
			bark("Failed, I have. Lost, lost, we are...");
			wait(100);
		}
	}
}


