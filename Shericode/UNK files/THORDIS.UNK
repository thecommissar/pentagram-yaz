			case"bye"
			{
				ran = urandom(4);

				if ran = 1
				{
					bark("Until our shades meet.");
				}
				if ran = 2
				{
					bark("Farewell.");
				}
				if ran = 3
				{
					bark("Goodbye.");
				}

				exitConvo();
				return;
			}
		}
	}
}


process Thordis::toldOthersConvo()
{
	[[PT_DEFAULT, referent]];

	reply : Number;
	tempKey : String;
	tempList : String List;

	if (toldMyTribe = false) and (toldOthers = false)
	{
    	bark("My people or the others?");

    	tempList ^= <<"Your people.", "The others.">>;
    	tempKey = ask(tempList);
	}
	else if (toldMyTribe = true) and (toldOthers = false)
	{
        bark("What else, wish you to know?");

    	tempList ^= <<"The others.">>;
    	tempKey = ask(tempList);
	}
	else if (toldMyTribe = false) and (toldOthers = true)
	{
        bark("What else, wish you to know?");

    	tempList ^= <<"Your people.">>;
    	tempKey = ask(tempList);
	}
	else
	{
      	bark("Told you of everyone, I have.
			No others, there are.");
		bark("Tell you again of them, I should?");

		reply = askYesNo();

		if reply = true
		{
    		bark("My people or the others?");

			toldMyTribe = false;
			toldOthers = false;
			toldSelf = false;
			toldTyorvi = false;
			toldRagnar = false;
			toldAtli = false;
			toldHrodny = false;
			toldIngyald = false;
			toldEzrekal = false;

    		tempList ^= <<"Your people.", "The others.">>;
    		tempKey = ask(tempList);
		}
		else
		{
    		bark("Make up your mind, you should.");
		}
	}

    if tempKey = "Your people."
    {
      	tempList -= <<"Your people.">>;
      	bark("Of me, Tyorvi, or Ragnar, wish you to know?");

       	if not toldSelf
       	{
        	tempList ^= <<"You">>;
       	}

       	if not toldTyorvi
       	{
        	tempList ^= <<"Tyorvi">>;
       	}

       	if not toldRagnar
       	{
        	tempList ^= <<"Ragnar">>;
       	}

		if (toldSelf = true) and (toldTyorvi = true)
			and (toldRagnar = true)
		{
	       	toldMyTribe = true;
		}

    	tempKey = ask(tempList);
    }

    if tempKey = "The others."
    {
      	tempList -= <<"The others.">>;
      	bark("Of Atli, Ingyald, Hrodny or Ezrekal, wish you to know?");

       	if not toldAtli
       	{
        	tempList ^= <<"Atli">>;
       	}

       	if not toldIngyald
       	{
        	tempList ^= <<"Ingyald">>;
       	}

       	if not toldHrodny
       	{
        	tempList ^= <<"Hrodny">>;
       	}

       	if not toldEzrekal
       	{
        	tempList ^= <<"Ezrekal">>;
       	}

		if (toldAtli = true) and (toldHrodny = true)
			and (toldIngyald = true) and (toldEzrekal = true)
		{
	       	toldOthers = true;
   		}

    	tempKey = ask(tempList);
    }

    if tempKey = "You"
    {
	    tempList -= <<"You">>;
        bark("Nothing to tell, there is. Clan Elder, I am. To Tyorvi,
            sister, I am.");
        bark("Mate and children, none, I have. Duty to my people
            only, I have.");

	    toldSelf = true;

		if (toldTyorvi = true) and (toldRagnar = true)
		{
	       	toldMyTribe = true;
		}

       	if not toldTyorvi
       	{
        	tempList ^= <<"Tyorvi">>;
       	}

       	if not toldRagnar
       	{
        	tempList ^= <<"Ragnar">>;
       	}

    	tempKey = ask(tempList);
    }

    if tempKey = "Tyorvi"
    {
      	tempList -= <<"Tyorvi">>;
      	bark("My younger brother, he is. Care for him, I must, until a
        	mate of his own, he has. But slim chance for that, he has.
        	Few women, there are. A fine husband, make, he would, if any
        	single women you know.");

    	toldTyorvi = true;

		if (toldSelf = true) and (toldRagnar = true)
		{
	       	toldMyTribe = true;
		}

       	if not toldSelf
       	{
        	tempList ^= <<"You">>;
       	}

       	if not toldRagnar
       	{
        	tempList ^= <<"Ragnar">>;
       	}

    	tempKey = ask(tempList);
    }

    if tempKey = "Ragnar"
    {
      	tempList -= <<"Ragnar">>;
      	bark("Our hunter, Ragnar is. Brings back fresh meat, he does.
        	Gone, he is, for days at a time. Little game left, there
        	is. Starve soon, we all will, I fear.");

      	toldRagnar = true;

		if (toldSelf = true) and (toldTyorvi = true)
		{
	       	toldMyTribe = true;
		}

       	if not toldSelf
       	{
        	tempList ^= <<"You">>;
       	}

       	if not toldTyorvi
       	{
        	tempList ^= <<"Tyorvi">>;
       	}

    	tempKey = ask(tempList);
    }

    if tempKey = "Atli"
    {
      	tempList -= <<"Atli">>;
      	bark("The leader of the other clan, he is. A pig-headed fool,
        	he is. An in-bred son of carrion flies, he is. Why made him
        	Elder, they did, beyond me, it is. Spine, he has not. Blood
        	of murderers, prosper he shall not!");

      	toldAtli = true;

		if (toldHrodny = true) and (toldIngyald = true)
			and (toldEzrekal = true)
		{
	       	toldOthers = true;
   		}

       	if not toldIngyald
       	{
        	tempList ^= <<"Ingyald">>;
       	}

       	if not toldHrodny
       	{
        	tempList ^= <<"Hrodny">>;
       	}

       	if not toldEzrekal
       	{
        	tempList ^= <<"Ezrekal">>;
       	}

    	tempKey = ask(tempList);
    }

    if tempKey = "Ingyald"
    {
      	tempList -= <<"Ingyald">>;
        bark("A truer sign of the gods displeasure, find, you will
            not! Died in childbirth, he should have! Work, he cannot.
            But live on, hardworking men to poison with his foul
            brews, Atli allows.");
        bark("Strangle him myself, I should. And Atli's job, for
            him, do.");

      	toldIngyald = true;

		if (toldAtli = true) and (toldHrodny = true)
			and (toldEzrekal = true)
		{
	       	toldOthers = true;
   		}

       	if not toldAtli
       	{
        	tempList ^= <<"Atli">>;
       	}

       	if not toldHrodny
       	{
        	tempList ^= <<"Hrodny">>;
       	}

       	if not toldEzrekal
       	{
        	tempList ^= <<"Ezrekal">>;
       	}

    	tempKey = ask(tempList);
    }

    if tempKey = "Hrodny"
    {
	    tempList -= <<"Hrodny">>;
        bark("What Atli deserves, she is! Another test from the
            gods, she is. Another test failed, Atli has.");
        bark("Crazy, she is. But stand up to Atli, she does. Grant
            her that, I will. A better Elder, would she be, if
            crazy, she were not.");
        bark("But allow her to speak blasphemy, Atli should not.
            Comdemn us all, her strange ideas do. Of course, exist,
            the gods do! Anger them further, she does. Allow such
            nonsense in my clan, I would not!");

	    toldHrodny = true;

		if (toldAtli = true) and (toldIngyald = true)
			and (toldEzrekal = true)
		{
	       	toldOthers = true;
   		}

       	if not toldAtli
       	{
        	tempList ^= <<"Atli">>;
       	}

       	if not toldIngyald
       	{
        	tempList ^= <<"Ingyald">>;
       	}

       	if not toldEzrekal
       	{
        	tempList ^= <<"Ezrekal">>;
       	}

    	tempKey = ask(tempList);
    }

    if tempKey = "Ezrekal"
    {
      	tempList -= <<"Ezrekal">>;
        bark("A good-for nothing, dried up old hag, she is! Sits
            and mutters to herself, she does. Think tithes of food,
            collect, she can. While starve, we do, and speak to
            the gods, she cannot!");
        bark("Sooner such food to Atli, yield, I would! Than on one
            who builds false hope, precious food waste!");

      	toldEzrekal = true;

		if (toldAtli = true) and (toldHrodny = true)
			and (toldIngyald = true)
		{
	       	toldOthers = true;
   		}

       	if not toldAtli
       	{
        	tempList ^= <<"Atli">>;
       	}

       	if not toldIngyald
       	{
        	tempList ^= <<"Ingyald">>;
       	}

       	if not toldHrodny
       	{
        	tempList ^= <<"Hrodny">>;
       	}

    	tempKey = ask(tempList);
	}
}
