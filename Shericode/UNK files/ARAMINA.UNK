uses "flags";
uses "npc";
uses "free";



npcclass Aramina inherits Npc
{
	process use ();
	process look ();
	process schedule(currentTime:Long);
	process enterFastArea();
	process leaveFastArea();
	process cast(ref:Referent);
	process AvatarStoleSomething(ref:Referent);

	process atHome(); 
	process randomBarkAtHome();
	process inKitchen();
	process atCourt();

	process feedMordea(); 
	process dropDrink(); 
	process closeDoor(); 
}



process Aramina::look()
{


	if isDead()
	{
		bark("corpse of Aramina \f cadavre d'Aramina \g Araminas Leiche");
		return;
	}

	if (araminaName and araminaJob)
	{
		bark("servant Aramina \f servante Aramina \g Die Dienerin Aramina");
		return;
	}
	else if araminaName 
	{
		bark("Aramina");
		return;
	}
	else if araminaJob 
	{
		bark("servant \f servante \g Dienerin");
		return;
	}
	else 
	{
		bark("girl \f jeune femme \g MÑdchen");
		return;
	}
}




process Aramina::schedule(currentTime:Long)
{

	point : WorldPoint;
	map : MapNum;
	sched:Number;


	if not devonInRule
	{
		return;
	}

	point.x = 16735;
	point.y = 16127;
	point.z = 48;
	sched = at_home;
	map = MapEastTenebrae;


	if canSafeTeleport(point,map) {

		araminaSchedule = sched;
		safeTeleport(point,map);
	} 
}




process Aramina::enterFastArea()
{


	resetRef(referent,PT_ACTIVITY);
	resetRef(referent,PT_PATHFIND);
	resetRef(referent,PT_ANIM);
	resetRef(referent,PT_BARK);
	


	if (araminaSchedule = at_home) 
	{
		spawn atHome() -> return;
	}
	

	else if (araminaSchedule = chow_down) 
	{
		spawn inKitchen() -> return;
	}


	else if (araminaSchedule = on_throne) 
	{
		spawn atCourt() -> return;
	}

}




process Aramina::leaveFastArea()
{
	killProcess(referent,PT_ACTIVITY);
	resetRef(referent,PT_PATHFIND);
	resetRef(referent,PT_ANIM);
	resetRef(referent,PT_BARK);

	if Aramina.isDead()
	{
		teleport(urandom(1000),urandom(1000),0,0);
	}

}




process Aramina::AvatarStoleSomething(ref:Referent)
{

	if (araminaSchedule != at_home) 
	{
		return;
	}

	item:Item;
	item.referent = ref;

	resetRef(referent,PT_ACTIVITY);
	resetRef(referent,PT_PATHFIND);
	resetRef(referent,PT_BARK);
	resetRef(referent,PT_ANIM);


	turnToFace(getDirToItem(Avatar:Referent),false,10);
	bark("I would not do that if I were you!
		\f Si j'estois toy, je ne le ferois point.
		\g Das wÅrde ich an Eurer Stelle nicht tun!");
	enterFastArea();
	return;
}





process Aramina::cast(ref:Referent)
{
	count:Number;
	count = 10;

	// TEST TO MAKE SURE THAT THE NPC HAS A TARGET
	// -------------------------------------------
	while (not getTarget()) and (count) {
		wait(1);
		count--;
	}

	ref = getTarget();



	if ref = Avatar:Referent
	{

		spawn callTheGuards(NULL_REF) -> return;


		if not isDead()
		{
			if (urandom(100) > 50)
			{

				bark("Beren, help me!
							\f Beren! Aide-moy!
							\g Helft mir, Beren!");
			}
			else
			{
				bark("Help me, Sorcerer!
							\f Sorcier! A l'aide!
							\g Helft mir, Hexer!");
			}
		}

	}
}



process Aramina::atHome() { 

	[[PT_ACTIVITY, referent]];

	startup 
	{
		pathEgg:Item;
		counter,counter2:Number;
		foreach	pathEgg where (type = TypePathMarker) within 10 cells of Aramina {
			counter2 = pathEgg.getFrame();
		}
	}

	process
	{

		for counter = counter2 to 5 
		{

			foreach	pathEgg where (type = TypePathMarker) and (frame = counter)
				within 50 cells of Aramina 
			{
				if pathfind(pathEgg.referent,20)
				{
					if (counter = 0) or (counter = 3)
					{
						closeDoor();
					}
					else
					{
						if not somebodyTalking
						{
							randomBarkAtHome();
						}
						else
						{
							realDoAnim(AS_FIDGET,getDir());
							wait(30);
						}
					}
				}
				else
				{
					wait(300);
					realDoAnim(AS_FIDGET,getDir());
				}
			}
		}

	counter2 = 0;

	}
}


