process Aramina::inKitchen()
{

	[[PT_ACTIVITY, referent]];

	startup 
	{
		pathEgg:Item;
		counter,counter2:Number;
		foreach	pathEgg where (type = TypePathMarker) within 10 cells of Aramina {
			counter2 = pathEgg.getFrame();
		}
	}

	process
	{

		for counter = counter2 to 18 
		{

			foreach	pathEgg where (type = TypePathMarker) and (frame = counter)	within 50 cells of Aramina {

				pathfind(pathEgg.referent,25);
				if counter = 10 {
					dropDrink();
				}
				if counter = 11 {
					closeDoor();
				}
				if counter = 15 {
					feedMordea();
				}
				else {
					realDoAnim(AS_FIDGET,getDir());
					wait(30);
					turnToFace(8-getDir(),0,10);
				}
			}
		}

	counter2 = 10;

	}
}


process Aramina::atCourt() 
{

	[[PT_ACTIVITY, referent]];

	startup 
	{
	ran,dir:Number;
	}

	process
	{
		ran = urandom(10);
		killProcess(referent,PT_ANIM);
		turnToFace(getDirToItem(Mordea:Referent),false,10);
		dir=getDir();

		if ran <= 3
		{
			spawn turnToFace(getDirToItem(Avatar:Referent),false,10) ->
			spawn realDoAnim(AS_FIDGET,dir) ->
			spawn turnToFace(getDirToItem(Mordea:Referent),false,20) -> return;
		}
		else if (ran >= 4) and (ran <= 8)
		{
			spawn realDoAnim(AS_FIDGET,dir) -> return;
		}
		else
		{
			turnToFace(4,0,10);
			spawn realDoAnim(AS_FIDGET,dir) -> return;
		}
		wait(60 + urandom(100));
	}
}


process Aramina::feedMordea()
{
	[[PT_ACTIVITY, referent]];

		food : Item;

		foreach	food where (type = TypePlateWithFood) within 8 cells of Aramina {
			turnToFace(getDirToItem(food.referent),false,10);
			realDoAnim(AS_WALK,getDir());
			realDoAnim(AS_CLIMB_2,getDir());
			food.setFrame(4);
			realDoAnim(AS_CLIMB_3,getDir());
			wait(60);
			return;
		}

		turnToFace(2,false,10);
		realDoAnim(AS_WALK,getDir());
		realDoAnim(AS_CLIMB_2,getDir());
		food.create(TypePlateWithFood,4);
		food.pop(13512,9952,64);
		realDoAnim(AS_CLIMB_3,getDir());
		wait(60);

}


process Aramina::dropDrink()
{
	[[PT_ACTIVITY, referent]];

		item : Item;

		foreach	item where (type = TypeTankard) within 8 cells of Aramina {
			turnToFace(getDirToItem(item.referent),false,10);
			realDoAnim(AS_WALK,getDir());
			realDoAnim(AS_CLIMB_2,getDir());
			wait(30);
			item.destroy();
			realDoAnim(AS_CLIMB_3,getDir());
			wait(60);
			return;
		}

		foreach	item where (type = TypeFrictionGrenade) within 8 cells of Aramina {
			turnToFace(2,false,10);
			realDoAnim(AS_WALK,getDir());
			realDoAnim(AS_CLIMB_2,getDir());
			wait(30);
			item.create(TypeTankard,urandom(2));
			item.pop(14207,10271,64);
			realDoAnim(AS_CLIMB_3,getDir());
			wait(30);
		}

}

