process Aramina::closeDoor()
{
	[[PT_ACTIVITY, referent]];

		sped : Item;
		door : Door;

		foreach	sped where (type = TypeDoorNS) within 10 cells of Aramina {
			door.referent = sped.referent;
			break;
		}

		if door {

			turnToFace(getDirToItem(door.referent),false,10);
			bark("Why is this open?
				\f Pourquoi cette porte est-elle ouverte?
				\g Weshalb steht diese TÅr offen?");
			door.doorDriver(Xavier:Referent);
		}
}

